<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusMap.Mobile.Views.AddNewRoutePage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="City name"
                   Text="{Binding CityNameEntry}"/>
            <Entry Placeholder="Bus stop name"
                   Text="{Binding StopNameEntry}"/>
            <TimePicker Time="{Binding Time}"
                        Format="HH:mm"/>
            <Label Text="{Binding GeoPosition.Latitude}"/>
            <Label Text="{Binding GeoPosition.Longitude}"/>
            <Button Text="Save Bus Stop"
                    HorizontalOptions="Center"
                    Command="{Binding SaveButtonCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>