<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:BusMap.Mobile.CustomControls;assembly=BusMap.Mobile"
             xmlns:viewModels="clr-namespace:BusMap.Mobile.ViewModels;assembly=BusMap.Mobile"
             x:Class="BusMap.Mobile.Views.NearestStopsMapPage"
             BindingContext="{Binding NearestStopsMapPageViewModel, Source={StaticResource Locator}}"
             Title="Nearest stops">


    <ContentPage.Content>
        <StackLayout>
            <customControls:BindableMap
                x:Name="MyMap"
                IsShowingUser="True"
                MapPosition="{Binding UserPosition}"
                MapPins="{Binding Pins}"
                AutomationId="NearestStopsMapPage_Map"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Test"
                        HorizontalOptions="Center"
                        Command="{Binding GetPinsCommand}"/>
                <Button Text="Check"
                        HorizontalOptions="Center"
                        Command="{Binding CheckPinsCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>