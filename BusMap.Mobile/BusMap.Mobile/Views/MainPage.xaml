<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BusMap.Mobile"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="BusMap.Mobile.Views.MainPage"
             BindingContext="{Binding MainPageViewModel, Source={StaticResource Locator}}">

    <MasterDetailPage.Detail>
        <ContentPage Title="DetailPage">
            <ContentPage.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android" Value="5"/>
                    <On Platform="Windows" Value="5"/>
                    <On Platform="iOS" Value="5,20,5,5"/>
                </OnPlatform>
            </ContentPage.Padding>
            <ContentPage.Content>
                <StackLayout>
                    <Grid Padding="25,0,25,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="From:"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center"/>
                        <Entry x:Name="FromEntry"
                               Grid.Row="0"
                               Grid.Column="1"
                               AutomationId="MainPage_FromEntry"
                               Text="{Binding StartBusStopName}"/>
                        <Label Text="To:"
                               Grid.Row="1"
                               Grid.Column="0"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center"/>
                        <Entry x:Name="ToEntry"
                               Grid.Row="1"
                               Grid.Column="1"
                               AutomationId="MainPage_ToEntry"
                               Text="{Binding DestinationBusStopName}"/>
                    </Grid>

                    <Button Text="Search"
                            Command="{Binding Command}"
                            AutomationId="SearchButton"/>
                    <Button Text="Advanced"
                            Clicked="AdvancedButton_OnClicked"/>
                    <Button Text="Nearest stops"
                            Clicked="NearestStopsButton_OnClicked"
                            AutomationId="MainPage_NearestStopsButton"/>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Detail>




    <MasterDetailPage.Master>
        <ContentPage BackgroundColor="Aquamarine"
                     Title="MasterPage">
            <ContentPage.Content>
                <Label Text="Master"
                       TextColor="BlueViolet"/>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
    

</MasterDetailPage>
